<!-- /Shop/ShoppingCart -->

@model IEnumerable<Shamazon.Models.ShoppingCartItem>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>
@if (!Model.Any())
{
    <p>Nothing in your shopping cart!</p>
}
else
{
    foreach (var item in Model)
    {
        <form action="/Shop/UpdateCart" class="form-horizontal" method="post" role="form" novalidate="novalidate">
            <div class="row well well-md">
                <div class="col-xs-5">@item.Product.Name</div>

                <div class="col-xs-3">
                    <div class="form-group">
                        <div class="col-md-5">
                            <label class="col-md-2 control-label" for="Quanitity"></label>
                            <input class="form-control" id="Quanitity" name="Quanitity" type="number" value="@item.Quantity">
                        </div>
                    </div>
                </div>

                <div class="col-xs-2">$@item.Product.CurrentPrice</div>

                <div class="col-xs-2">
                    <a class="btn btn-danger" href="/Shop/RemoveItem/@item.Id">Remove</a>
                </div>
            </div>
        </form>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
