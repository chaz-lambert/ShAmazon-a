<!-- /Shop/Product/{id} -->

@model Shamazon.Models.Product

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Current Price: @Model.CurrentPrice</li>
    <li>Original Price: @Model.OriginalPrice</li>
    <li>Rating: @Model.Rating</li>
</ul>
<a class="btn btn-default" href="/Shop/AddToCart/@Model.Id">Add to cart</a>

